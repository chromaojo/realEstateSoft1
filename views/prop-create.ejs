<section class="section"> Publish A Property
  <div class="row">
    <div class="col-lg-12">

      <div class="card">
        <form action="/user/create/pXrRoPp" method="POST" enctype="multipart/form-data">
          <div class="card-body">
            <h5 class="card-title">Property Creator</h5>
            <div class="row">

              <div class="col">
                <div class="input-group mb-3">
                  <span class="input-group-text" id="basic-addon1">Title</span>
                  <input type="text" class="form-control" placeholder="A Suitable Title" aria-label="Username"
                    aria-describedby="basic-addon1" required name="title">
                </div>
              </div>

              <!-- <div class="col">
                <div class="input-group mb-3">
                  <span class="input-group-text" id="basic-addon1">Price</span>
                  <input type="number" class="form-control" placeholder="Property Price" aria-label="Username"
                    aria-describedby="basic-addon1" required>
                </div>
              </div> -->
            </div>
            <div class="row">
              <div class="col">
                <div class="input-group mb-3">
                  <span class="input-group-text" id="basic-addon1">Location</span>
                  <input type="text" class="form-control" placeholder="Property Location" aria-label="Username"
                    aria-describedby="basic-addon1" required name="location">
                </div>
              </div>
              <div class="col">
                <div class="input-group mb-3">
                  <span class="input-group-text" id="basic-addon1">Price</span>
                  <input type="number" class="form-control" placeholder="Property Price" aria-label="Username"
                    aria-describedby="basic-addon1" required name="price">
                </div>
              </div>
            </div>
            <div class="row mb-3">

              <div class="col-sm-6">
                <label for="inputNumber" class="col-sm-6 col-form-label">Choose Image</label>
                <input class="form-control" type="file" id="pixz" multiple accept=".jpeg, .png, .jpg" required
                  name="pixz">

              </div>
              <div class="col"> <label for="inputNumber" class="col-sm-6 col-form-label">Action</label>
                <select class="form-select" aria-label="Default select example" name="action">
                  <option selected>Select Action</option>
                  <hr>
                  <option value="sale">Sales</option>
                  <option value="lease">Lease</option>
                  <option value="rent">Rent</option>
                </select>
              </div>
            </div>
            <div class="row mb-3">

              <div class="col"> <label for="inputNumber" class="col-sm-6 col-form-label">Property Type</label>
                <select class="form-select" aria-label="Default select example" name="prop_type">
                  <option selected>Select Property Type</option>
                  <hr>
                  <option value="land">Land</option>
                  <option value="building">Building</option>
                  <option value="ware_house">Ware House</option>
                  <option value="apartment">Apartment</option>
                  <option value="shortlet">Short Let</option>
                </select>
              </div>
              <div class="col"> <label for="inputNumber" class="col-sm-6 col-form-label">Category</label>
                <select class="form-select" aria-label="Default select example" name="category">
                  <option selected>Select Category</option>
                  <hr>
                  <option value="residential">Residential Property</option>
                  <option value="commercial">Commercial Property</option>
                </select>
              </div>
            </div>
            <label for="inputNumber" class="col-sm-6 col-form-label">Details & Description of the Property</label>

            <textarea class="tinymce-editor" name="description" id="description">

            </textarea><!-- End TinyMCE Editor -->
            <div>
              <button type="submit" class="btn btn-outline-primary mt-3">Send</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>